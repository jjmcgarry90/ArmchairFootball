<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.gtri.espn"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".activities.main.FanbookApplication"
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Main Activities -->
        <activity
            android:name=".activities.main.MainActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.main.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.main.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".activities.main.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.main.PlaySelectionActivity"
            android:label="@string/title_activity_play_selection"
            android:screenOrientation="portrait" >
        </activity>

        <!-- Game Activities -->
        <activity
            android:name=".activities.general.EventListActivity"
            android:label="@string/title_activity_event_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.general.EventInfoActivity"
            android:label="@string/title_activity_event_info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.general.FriendListActivity"
            android:label="@string/title_activity_friend_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.general.FriendInfoActivity"
            android:label="@string/title_activity_friend_info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.general.GroupListActivity"
            android:label="@string/title_activity_group_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.general.GroupInfoActivity"
            android:label="@string/title_activity_group_info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.general.ParticipantListActivity"
            android:label="@string/title_activity_participant_list" >
        </activity>
        <activity
            android:name=".activities.general.ParticipantInfoActivity"
            android:label="@string/title_activity_participant_info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.general.HuddleActivity"
            android:label="@string/title_activity_huddle"
            android:screenOrientation="portrait" >
        </activity>

        <!-- Login Activities -->
        <activity
            android:name=".activities.login.FacebookActivity"
            android:label="@string/title_activity_facebook"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.login.LoginScreenActivity"
            android:label="@string/title_activity_login_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.login.LoginEmailActivity"
            android:label="@string/title_activity_login_email"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".activities.login.LoginUsernameActivity"
            android:label="@string/title_activity_login_username"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Dialog Activities -->
        <activity
            android:name=".dialogs.MenuDialog"
            android:label="@string/title_dialog_menu"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".dialogs.CreateGroupDialog"
            android:label="@string/title_dialog_create_group"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".dialogs.FavoriteTeamDialog"
            android:label="@string/title_dialog_favorite_team"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".dialogs.ResetTeamDialog"
            android:label="@string/title_dialog_reset_team"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>