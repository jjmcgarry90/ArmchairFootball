<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/Red"
                android:endColor="@color/Red"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/DarkRed" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item android:state_enabled="false"> 
        <shape>
            <gradient
                android:endColor="@color/DarkGray"
                android:startColor="@color/DarkGray"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/PowderBlue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
      </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/LightCoral"
                android:startColor="@color/DarkMadder"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/Black" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>